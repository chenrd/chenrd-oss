<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans        
		    http://www.springframework.org/schema/beans/spring-beans.xsd        
		    http://code.alibabatech.com/schema/dubbo
		    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
 
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="media-web" version="1.0" owner=""/>
 
    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="${dubbo.zookeeper.adress}"/>
 
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="${dubbo.protocol.port}" />
 
	<dubbo:reference id="userService" interface="com.chenrd.sys.service.UserService" />
	<dubbo:reference id="powerService" interface="com.chenrd.sys.service.PowerService" />
	<dubbo:reference id="menuService" interface="com.chenrd.sys.service.MenuService" />
	<dubbo:reference id="logRecordService" interface="com.chenrd.sys.service.LogRecordService" />
	<dubbo:reference id="organizationService" interface="com.chenrd.sys.service.OrganizationService" />
    
</beans>